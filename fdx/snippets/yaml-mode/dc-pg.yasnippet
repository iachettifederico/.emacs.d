# -*- mode: snippet -*-
# name: Docker compose postgres database
# key: dc-pg
# expand-env: ((yas-indent-line 'fixed))
# --
database:
  image: postgres:12.3-alpine
  environment:
    POSTGRES_PASSWORD: postgres
  expose:
    - 5432
  ports:
    - '5432:5432'
  volumes:
    - pg-data:/var/lib/postgresql/data
    # remember to add volume: 'pg-data:'